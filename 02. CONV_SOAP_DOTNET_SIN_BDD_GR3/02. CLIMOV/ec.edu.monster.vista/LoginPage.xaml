<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02._CLIMOV.ec.edu.monster.vista.LoginPage"
             BackgroundColor="#E0F7FA"
             Title="Inicio de Sesión">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="1"
                             Padding="40"
                             Spacing="25"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <!-- Logo centrado -->
            <Image Source="logo_monster.png"
                   WidthRequest="200"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"
                   Margin="0,0,0,10"/>

            <Label Text="Bienvenido"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#007BA7"/>

            <Entry x:Name="entryUsuario"
                   Placeholder="Usuario"
                   BackgroundColor="White"
                   TextColor="#333"
                   HeightRequest="45"
                   WidthRequest="250"
                   ReturnType="Next"
                   Margin="0,5" />

            <Grid>
                <Entry x:Name="entryContrasena"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="#333"
                       HeightRequest="45"
                       WidthRequest="250"
                       ReturnType="Go"
                       Completed="OnLoginClicked"
                       Margin="0,5"/>
                <ImageButton x:Name="btnTogglePassword"
                             Source="eye.png"
                             WidthRequest="25"
                             HeightRequest="25"
                             BackgroundColor="Transparent"
                             Clicked="OnTogglePasswordVisibility"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Margin="0,0,10,0"/>
            </Grid>

            <Button Text="Iniciar Sesión"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#4DD0E1"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="250"
                    Margin="0,10"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
